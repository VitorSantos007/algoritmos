programa {
  funcao inicio() {
    
    real num

    escreva ("Digite um número de sua preferência: ")
    leia (num)

    se (num <= 0){escreva ("\n--------------------")
      escreva ("\nO número apresentado é negativo!")
      escreva ("\n--------------------")
    }
    senao {escreva("\n--------------------")
      escreva ("\nO número apresentado é positivo!")
    escreva ("\n--------------------")
    }



  }
}
